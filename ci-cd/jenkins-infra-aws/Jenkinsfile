pipeline {
    agent any
    tools {
        jdk 'JDK-21'
        nodejs 'NODE-18'
    }
    environment {
        DOCKER_IMAGE='simple-react-app'
    }
    options {
        timeout(time:30, unit:'MINUTES')
    }
    stages {
        stage('OS Check'){
            steps{
                sh "cat /etc/os-release | sed -n '1p'"
            }
        }
        stage('Clean Workspace'){
            steps{
                cleanWs()
            }
        }
    }
}